<Window x:Class="Todo_List.TaskEditorControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_List"
        mc:Ignorable="d"
        Title="Task" SizeToContent="WidthAndHeight" MinWidth="223" Background="#070F1B" WindowStyle="ToolWindow">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Grid.Row" Value="2"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="Width" Value="100"/>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="35"/>
		</Grid.RowDefinitions>
		<StackPanel x:Name="ErrorMsg" Visibility="Collapsed" Background="#FFCCCC">
			<TextBlock Text="Fill all empty fields"/>
			<ListView x:Name="TaskList" Background="#FFCCCC"/>
		</StackPanel>
		<ContentPresenter Grid.Row="1" x:Name="TaskEditor"/>
		<Button Margin="5" x:Name="btCancel" Foreground="White" Background="Maroon" Content="Back" Click="btCancel_Click" />
		<Button Margin="5,5,110,5" x:Name="btAccept" Foreground="White" Background="YellowGreen" Content="Accept" Click="btApply_Click" />
	</Grid>
</Window>
